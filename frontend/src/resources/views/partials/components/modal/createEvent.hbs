<form
    modal='create-e-modal'
    id='createEventPopup'
    class='mover-actor create-e-modal modal fade dl-one hidden-xs'
    role='dialog'
>
    <div class='modal-dialog'>
        <!-- Modal content-->
        <div class='modal-content rounded color-6'>
            <button type='button' class='close dl-close hidden-xs' data-dismiss='modal'><span
                    class='ello-cancel-2'
