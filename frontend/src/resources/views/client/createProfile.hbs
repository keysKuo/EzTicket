<link rel="stylesheet" href="css/admin.css">

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{error}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}
{{#if success}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{success}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

<div class='container'>
    <div class='row'>
        <div class='col-md-12'>
            <div  class='card'>
                <div style="background-color: #11101d;"  class='card-header d-flex justify-content-between text-light'>
                    <h4>{{pageName}}</h4>
                    {{!-- <a type="button" href="/my-ezt" class="btn btn-secondary">Trở lại</a> --}}
                </div>
                <div class='card-body'>
                    <form class="form"  method="POST">
                        <fieldset id="sizeForm">

                            <div class="form-row">
                                <div class="form-group col">
                                    <label class="control-label text-uppercase" for="name">Tên tổ chức / Cá nhân<span style="color:red">*</span></label>
                                    <input value="{{business.name}}" id="name" name="name" placeholder="Tên tổ chức / Cá nhân"
                                    class="form-control" required type="text">
                                </div>

                                <div class="form-group col">
                                    <label class="control-label text-uppercase" for="name">Loại hình doanh nghiệp<span style="color:red">*</span></label>
                                    <input value="{{business.business_type}}" id="business_type" name="business_type" placeholder="Loại hình doanh nghiệp"
                                    class="form-control" required type="text">
                                </div>
                                
                                
                            </div>
                            

                            <div class="form-row">
                                <div class="form-group col">
                                    <label class="control-label text-uppercase" for="name">Mã doanh nghiệp<span style="color:red">*</span></label>
                                    <input value="{{business.business_id}}" id="business_id" name="business_id" placeholder="Mã doanh nghiệp"
                                    class="form-control" required type="text">
                                </div>

                                <div class="form-group col">
                                    <label class="control-label text-uppercase" for="name">Mã số thuế<span style="color:red">*</span></label>
                                    <input value="{{business.tax_id}}" id="tax_id" name="tax_id" placeholder="Mã số thuế"
                                    class="form-control" required type="text">
                                </div>
                                
                                
                                
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label class="control-label text-uppercase" for="name">Email<span style="color:red">*</span></label>
                                    <input value="{{business.email}}" id="email" name="email" placeholder="Email"
                                    class="form-control" required type="email">
                                </div>

                                <div class="form-group col">
                                    <label class="control-label text-uppercase" for="name">Số điện thoại<span style="color:red">*</span></label>
                                    <input value="{{business.phone}}" id="phone" name="phone" placeholder="Số điện thoại"
                                    class="form-control" required type="text">
                                </div>
                                <div class="form-group col">
                                    <label class="control-label text-uppercase" for="name">Địa chỉ<span style="color:red">*</span></label>
                                    <input value="{{business.address}}" id="address" name="address" placeholder="Địa chỉ"
                                    class="form-control" required type="text">
                                </div>
                                
                                
                                
                            </div>
                            
                            

                            
                        </fieldset>
                        
                        
                        <div class="form-footer">
                                <button type="submit" class="btn btn-success">Lưu hồ sơ</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    

    let fileInput = document.getElementById("pimg")
    let imageContainer = document.getElementById('images-upload')
    let numOfFiles = document.getElementById('num-of-file')
    function preview() {
        imageContainer.innerHTML = ""
        numOfFiles.textContent = `${fileInput.files.length} ảnh đã được chọn`;
        for (i of fileInput.files) {
            let reader = new FileReader()
            let figure = document.createElement("figure")
            let figCap = document.createElement("figcaption")
            figCap.innerText = i.name
            figure.appendChild(figCap)
            reader.onload = () => {
                let img = document.createElement("img");
                img.setAttribute("src", reader.result);
                img.setAttribute("width", '50%');
                figure.insertBefore(img, figCap);
            }
            imageContainer.appendChild(figure);
            reader.readAsDataURL(i)
        }
    }
    CKEDITOR.replace('ckeditor')
    
</script>